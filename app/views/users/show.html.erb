
<div class="user_profile">

  <h3><%= @user.full_name %>
  - <%= @user.personality.convert_to_mb if @user.personality %><h3>

</div>
<% if !@user.personality %>
<div class="">
<%= link_to "Analyze!", new_personality_path , class: "waves-effect waves-light btn" %>
</div>

<%elsif @user.personality %>
<div class="row">
  <ul class="collapsible popout col s1 m1 l2" data-collapsible="accordion">
    <li>
      <div class="collapsible-header orange">
          <p><%=@type.nickname%></p> <i class="material-icons"></i>
      </div>
      <%= render 'big', locals:{name:@user.personality.parse_personality["personality"][0]["name"], value:@user.personality.op } %>
      <div class="collapsible-body col s1 m1 l12">
          <div class="col l12 center" >
              <%= link_to "View full results",  personality_path(@user.personality.id), class: "waves-effect waves-light btn"  %>
          </div>
      </div>
    </li>
  </ul>
</div>
<% end %>

<%= render 'bucketList', locals:{buckelist: @buckelist} %>

<div class="fb-share-button" data-href="http://dbcbucketlist.herokuapp.com/share/<%=current_user.id%>" data-layout="button" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fdbcbucketlist.herokuapp.com%2Fusers%2F9&amp;src=sdkpreparse">Share</a></div>
